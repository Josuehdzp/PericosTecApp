<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/idLicenciaVista"
    style="@style/DialogTema"
    android:layout_height="wrap_content"
    android:background="@color/negroprincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/idLicenciaToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ToolbarColor"
            app:popupTheme="@style/AppTheme"
            android:background="@drawable/interfaz_overlay_bajo_invertida"
            android:minHeight="?attr/actionBarSize" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idLicenciaToolbarTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/UbuntuTema"
                    android:layout_gravity="center_vertical"
                    android:text="Licencia"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/pericostectitulo"
                    android:contentDescription="@string/todo" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:background="@drawable/boton_relleno_blanco">

            <TextView
                android:id="@+id/idTextoLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/UbuntuTema"
                android:textAlignment="center"
                android:text="Licencia"
                android:textColor="@color/black"/>
        </ScrollView>

        <Button
            android:id="@+id/idBotonLicencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_orillas_blanco"
            style="@style/UbuntuTema"
            android:text="Cerrar"/>

    </LinearLayout>

</LinearLayout>