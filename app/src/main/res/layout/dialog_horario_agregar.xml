<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/contenedorDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/negroprincipal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Agregar Materia"
                    style="@style/UbuntuTema"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconmateria"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="start"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/icono_escencial_cuaderno" />

                        <EditText
                            android:id="@+id/ETMateria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:hint="Añadir Materia"
                            style="@style/UbuntuTema"
                            android:inputType="textCapSentences" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconHora"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/icono_escencial_reloj" />


                        <EditText
                            android:id="@+id/ETHoraEntrada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=" 1"
                            style="@style/UbuntuTema"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="time"
                            android:hint="Entrada"
                            />

                        <EditText
                            android:id="@+id/ETHoraSalida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/UbuntuTema"
                            android:ems="3"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="time"
                            android:hint="Salida"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconProf"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/icono_escencial_profesor" />

                        <EditText
                            android:id="@+id/ETProfesor"
                            android:layout_width="match_parent"
                            style="@style/UbuntuTema"
                            android:layout_height="wrap_content"
                            android:hint="Añadir Profesor"
                            android:inputType="textCapSentences" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconAula"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/icono_universidad" />

                        <EditText
                            android:id="@+id/ETAula"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/UbuntuTema"
                            android:hint="Añadir Aula"
                            android:inputType="textCapSentences" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconColor"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/icono_escencial_colores" />

                        <LinearLayout
                            android:id="@+id/LinearColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ETColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                style="@style/UbuntuTema"
                                android:fontFamily="@font/ubuntu"
                                android:clickable="true"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:text="Click para añadir Color"
                                android:textSize="15sp" />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/idCompEditNotasColorContenedor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@color/grisclaro"
                                >

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/CardColorSelec"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:layout_margin="3dp"
                                    app:cardBackgroundColor="@color/grisoscuro"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/ETColorInvisible"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:ems="10"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:hint="Click para añadir Color"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/idDialogoHorarioCancelar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/buttonstyle"
                            android:backgroundTint="@color/rojo"
                            android:text="Cancelar"
                            android:fontFamily="@font/ubuntu"
                            android:textStyle="bold"
                            style="@style/UbuntuTema"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/idDialogoHorarioAceptar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/buttonstyle"
                            android:backgroundTint="@color/verde"
                            android:text="Guardar"
                            android:fontFamily="@font/ubuntu"
                            android:textStyle="bold"
                            style="@style/UbuntuTema"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>