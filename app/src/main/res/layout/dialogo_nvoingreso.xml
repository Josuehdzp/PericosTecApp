<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DialogTema"
    android:id="@+id/idVistaDialogoNvoIngreso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/idDialogImagenSalir"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:src="@drawable/icono_escencial_error"
            android:contentDescription="@string/todo" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:ignore="UselessParent">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/idFeedDialogImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/edificio" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/idDialogImagenGuardarImagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/boton_relleno_blanco"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="30dp"
                android:layout_centerInParent="true"
                android:layout_height="30dp"
                android:src="@drawable/icono_escencial_guardar" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>