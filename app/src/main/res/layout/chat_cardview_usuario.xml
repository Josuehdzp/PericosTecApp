<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="7dp"
    android:gravity="center"
    android:id="@+id/idChatVerUsuarioslayoutPrincipal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/negroprincipal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/idChatVerUsuarioscivFotoPerfil"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idChatVerUsuariosNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        style="@style/UbuntuTema"
                        android:fontFamily="@font/ubuntu"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/idChatVerUsuariosCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="correo"
                        style="@style/UbuntuTema"
                        android:textAlignment="center"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/idChatVerUsuariosMatricula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="matricula"
                        style="@style/UbuntuTema"
                        android:textAlignment="center"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/idChatVerUsuariosGenero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="genero"
                        style="@style/UbuntuTema"
                        android:textAlignment="center"
                        android:textSize="13sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/idChatVerUsuarioscivFotoCarrera"
                        android:layout_width="38dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icono_itsvc_nice"/>
                    <TextView
                        android:id="@+id/idChatVerUsuariosCarrera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:text="carrera"
                        style="@style/UbuntuTema"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:id="@+id/idChatVerUsuariosNoDisponible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/black_overlay">
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>